{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react", // Required by some dependencies like chalk
    /* Module Resolution */
    "module": "ESNext",
    "moduleResolution": "node",
    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Output Options */
    "declaration": true, // Generate .d.ts files (CRITICAL for libraries)
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/esm", // Default output directory
    "rootDir": "./src", // The root of our source files
    /* Vitest Integration */
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src"
  ], // <-- This tells TSC to compile everything in the 'src' folder
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__",
    "**/__snapshots__"
  ]
}